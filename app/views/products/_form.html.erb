<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs m-1">
    <%= f.input :name, label: 'Nome do Produto'%>
    <%= f.input :description, label: "Descrição do Produto" %>
    <%= f.input :category, label: 'Categoria', collection: Product::CATEGORY %>
    <%= f.input :price, label: 'Preço Unitário' %>
    <%= f.input :unit, label: 'Unidade Comercializada' %>
    <%= f.input :total_quantity, label: 'Quantidade total' %>
    <%= f.input :photo, as: :file, label: 'Foto do Produto' %>
  </div>

  <div class="form-actions btn btn-primary">
    <%= f.button :submit %>
  </div>
<% end %>
